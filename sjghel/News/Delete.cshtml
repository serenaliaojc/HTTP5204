@model Sjghel_Project.Models.News

@{
    ViewBag.Title = "News Delete";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h2>Delete News</h2>

<h3>Are you sure you want to delete this?</h3>
<div class="news-delete">
    <h4>Delete News</h4>
    <div class="row">
        <p class="col-md-2">@Html.DisplayNameFor(model => model.news_title)</p>
        <div class="col-md-10">@Html.DisplayFor(model => model.news_title)</div>
    </div>
    <div class="row">
        <p class="col-md-2">@Html.DisplayNameFor(model => model.news_post_time)</p>
        <div class="col-md-10">@Html.DisplayFor(model => model.news_post_time)</div>
    </div>
    <div class="row">
        <p class="col-md-2">@Html.DisplayNameFor(model => model.news_edit_time)</p>
        <div class="col-md-10">@Html.DisplayFor(model => model.news_edit_time)</div>
    </div>
    <div class="row brief">
        <p class="col-md-2">@Html.DisplayNameFor(model => model.news_brief)</p>
        <div class="col-md-10">@Html.DisplayFor(model => model.news_brief)</div>
    </div>
    <div class="row">
        <p class="col-md-2">@Html.DisplayNameFor(model => model.news_content)</p>
        <div class="multiline col-md-10">@Html.Raw(Model.news_content)</div>
    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions section-footer">
            <input type="submit" value="Delete" class="btn btn-default btn-custom" /> |
            @Html.ActionLink("Back to List", "Admin")
        </div>
    }
</div>
